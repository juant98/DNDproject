<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Poll - Sesión del Viernes</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 50px;
      background: #f4f4f9;
    }
    h1 {
      color: #333;
    }
    button {
      margin: 10px;
      padding: 12px 24px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      background: #007bff;
      color: white;
    }
    button:disabled {
      background: gray;
      cursor: not-allowed;
    }
    #results {
      margin-top: 30px;
      font-size: 18px;
    }
  </style>
</head>
<body>
  <h1>¿Irás a la sesión de este viernes?</h1>

  <button id="yesBtn">Iré a la sesión</button>
  <button id="noBtn">No iré a la sesión</button>

  <div id="results"></div>

  <script>
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const resultsDiv = document.getElementById("results");

    // Fetch and display current votes
    async function fetchVotes() {
      const res = await fetch("/votes");
      const data = await res.json();
      resultsDiv.innerHTML = `
        ✅ Iré a la sesión: <b>${data.yes}</b><br>
        ❌ No iré a la sesión: <b>${data.no}</b>
      `;
    }

    // Send a vote
    async function sendVote(choice) {
      const res = await fetch("/vote", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ choice })
      });
      const data = await res.json();
      fetchVotes();
    }

    // Prevent multiple votes using localStorage
    function checkVoted() {
      return localStorage.getItem("voted");
    }

    function disableButtons() {
      yesBtn.disabled = true;
      noBtn.disabled = true;
    }

    yesBtn.addEventListener("click", () => {
      if (!checkVoted()) {
        sendVote("yes");
        localStorage.setItem("voted", "yes");
        disableButtons();
      }
    });

    noBtn.addEventListener("click", () => {
      if (!checkVoted()) {
        sendVote("no");
        localStorage.setItem("voted", "no");
        disableButtons();
      }
    });

    // On page load
    window.onload = () => {
      fetchVotes();
      if (checkVoted()) disableButtons();
    };
  </script>
</body>
</html>
